<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.MainActivity" android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="69dp"
            android:text="Changed?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/text_box" android:textSize="30sp"
            android:verticalScrollbarPosition="defaultPosition"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="172.28.160.1"
            android:ems="10"
            android:id="@+id/editText"/>
    <EditText
            android:layout_width="267dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="7555"
            android:ems="10"
            android:id="@+id/editText2"/>

    <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="130dp" android:id="@+id/button3" android:layout_weight="1"
            android:onClick="on_button_click"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >

        <com.example.flightcontrolapp.views.VerticalSeekBar
                android:layout_width="61dp"
                android:layout_height="294dp"
                android:progress="0"
                android:max="100"
                android:min="0"


                android:scrollbarStyle="outsideInset" android:id="@+id/throttle"/>
        <com.example.flightcontrolapp.views.Joystick
                android:layout_width="293dp"
                android:layout_height="match_parent"
                android:id="@+id/joystick"


                android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <SeekBar
            android:layout_width="294dp"
            android:layout_height="61dp" android:id="@+id/rudder" android:layout_gravity="center"
            style="@style/Widget.AppCompat.SeekBar" android:max="100" android:min="-100" android:progress="0"
            android:indeterminate="false"
            android:clickable="true"/>


</LinearLayout>